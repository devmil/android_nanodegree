<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="@dimen/activity_horizontal_margin"
    android:layout_marginRight="@dimen/activity_horizontal_margin"
    android:baselineAligned="false"
    android:divider="?android:attr/dividerHorizontal"
    android:orientation="horizontal"
    android:showDividers="middle"
    tools:context="de.devmil.nanodegree_spotifystreamer.MainActivity">

    <fragment android:id="@+id/activity_main_fragment_search"
        android:name="de.devmil.nanodegree_spotifystreamer.fragments.SearchFragment"
        android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1"
        tools:layout="@android:layout/list_content" />

    <FrameLayout android:id="@+id/activity_main_fragment_artist_top10_tracks_placeholder" android:layout_width="0dp"
        android:layout_height="match_parent" android:layout_weight="2" />

</LinearLayout>
