<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical">
    <ImageView
        android:id="@+id/fragment_search_result_entry_image"
        android:layout_width="@dimen/fragment_search_result_entry_image_size"
        android:layout_height="@dimen/fragment_search_result_entry_image_size"
        android:scaleType="centerInside"
        android:layout_margin="@dimen/fragment_search_result_entry_margin" />
    <TextView
        android:id="@+id/fragment_search_result_entry_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/fragment_search_result_entry_margin"/>
</LinearLayout>
